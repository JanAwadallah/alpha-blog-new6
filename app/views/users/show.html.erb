<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>
<%= gravatar_for @user, size: 200, class: "responsive"%>
<div class="text-center mt-4">
    <% if logged_in? && @user === current_user%>
        <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
        <%= link_to "Create New Article", new_article_path, class: "btn btn-outline-info" %>
    <% end %>
</div>
<h3 class="text-center mt-4">Articles</h3>

<div class="flickr_pagination mb-4">
    
<%= will_paginate @articles, :container => false %>
<p class="disabled m-2">Total of <%= pluralize(@user.articles.count, "Article") %>  </p>

</div>
<%= render "articles/articles" %>
<% if @user.articles.count > 0 %>
    <div class="flickr_pagination mb-4"> 
        <%= will_paginate @articles, :container => false %>
        <p class="disabled m-2">Total of <%= pluralize(@user.articles.count, "Article") %>  </p>
    </div>
<% end %>