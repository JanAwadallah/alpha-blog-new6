<div class="container">

<div class="row justify-content-center mb-4">
<div  class="col-10">
<%= render "shared/errors", obj: @category %>

<%= form_with(model: @category, local: true, class: "shadow-lg p-3 mb-3 bg-info rounded") do |f| %>
    <div class="form-group row ">
        <%= f.label :name,"Category Name",  class: "col-2 col-form-label text-light" %><br>
        <div class="col-10">
            <%= f.text_field :name, placeholder: "Category Name", class: "form-control shadow-lg rounded" %>
        </div>
    </div>
      
    
   
    <div class="form-group row d-flex justify-content-center">
        <%= f.submit class: "btn btn-outline-light btn-lg" %>
        <%= link_to "Cancel", categories_path, class: "btn btn-outline-light btn-lg ml-2" %>
    </div>

<% end %>
</div>
</div>
<center><p> <%= link_to "[ Alpha-Blog Home ]", root_path, class: "text-info" %> </p></center>

</div>